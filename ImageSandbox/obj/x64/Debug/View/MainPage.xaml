    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:ConnectionId='2' x:Name="sourceImageDisplay" HorizontalAlignment="Left" Height="300" Margin="213,119,0,0" VerticalAlignment="Top" Width="300"/>
        <Button x:ConnectionId='3' x:Name="embedButton" Content="Embed" Margin="689,386,0,0" VerticalAlignment="Top"                         />
        <Button x:ConnectionId='4' x:Name="extractButton" Content="Extract" Margin="683,752,0,0" VerticalAlignment="Top"                          Height="41" Width="67"/>
        <Image x:ConnectionId='5' x:Name="monoImageDisplay" HorizontalAlignment="Left" Height="300" Margin="1006,119,0,0" VerticalAlignment="Top" Width="300"/>
        <Image x:ConnectionId='6' x:Name="hiddenImageDisplay" HorizontalAlignment="Left" Height="300" Margin="213,602,0,0" VerticalAlignment="Top" Width="300"/>
