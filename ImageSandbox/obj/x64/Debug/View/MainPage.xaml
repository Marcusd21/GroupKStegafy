        <TextBlock x:ConnectionId='12' x:Name="tbSource" HorizontalAlignment="Left" Margin="213,0,0,890" Text="Source Image:" TextWrapping="Wrap" Width="146" FontSize="20" Height="39" VerticalAlignment="Bottom"/>
        <TextBlock x:ConnectionId='13' x:Name="tbMonochrome" HorizontalAlignment="Left" Margin="1006,0,0,904" Text="Monochrome Image:" TextWrapping="Wrap" Width="203" FontSize="20" FontFamily="Bodoni MT Black" Height="28" VerticalAlignment="Bottom"/>

    </Grid>
