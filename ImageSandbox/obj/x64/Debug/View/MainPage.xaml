<Page
    x:Class="GroupKStegafy.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:GroupKStegafy.ViewModel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <viewModel:MainPageViewModel/>
    </Page.DataContext>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="981" VerticalAlignment="Center">
        <Image x:ConnectionId='2' x:Name="sourceImageDisplay" Source="{Binding SourceImage.BitImage, Mode=TwoWay}" Margin="213,119,987,562"/>
        <Button x:ConnectionId='3' x:Name="embedButton" Content="Embed" Margin="689,386,0,0" VerticalAlignment="Top" />
        <Button x:ConnectionId='4' x:Name="extractButton" Content="Extract" Margin="683,752,0,0" VerticalAlignment="Top" Height="41" Width="67"/>
        <Image x:ConnectionId='5' x:Name="monoImageDisplay" Margin="1006,119,194,562"/>
        <Image x:ConnectionId='6' x:Name="hiddenImageDisplay" Margin="213,507,987,174"/>
        <Image x:ConnectionId='7' x:Name="secretImageDisplay" Margin="1006,522,194,159"/>
        <Button x:ConnectionId='8' x:Name="loadHiddenImageButton" Content="Image" Margin="120,712,0,0" VerticalAlignment="Top"  Height="41" Width="67"                                    />
        <Button x:ConnectionId='9' x:Name="saveButton" Content="Save" Margin="689,467,0,0" VerticalAlignment="Top"                         />
        <Button x:ConnectionId='10' x:Name="loadSourceImageButton" Content="Image" Margin="125,369,0,0" VerticalAlignment="Top"                          Height="41" Width="67"/>
        <Button x:ConnectionId='11' x:Name="loadMonoImageButton" Content="Image" Margin="934,369,0,0" VerticalAlignment="Top" Height="41" Width="67"                                  />
        <TextBlock x:ConnectionId='12' x:Name="tbSource" HorizontalAlignment="Left" Margin="62,0,0,652" Text="Source Image:" TextWrapping="Wrap" Width="146" FontSize="20" Height="39" VerticalAlignment="Bottom" FontFamily="Segoe UI"/>
        <TextBlock x:ConnectionId='13' x:Name="tbMonochrome" HorizontalAlignment="Left" Margin="817,0,0,662" Text="Monochrome Image:" TextWrapping="Wrap" Width="203" FontSize="20" FontFamily="Bodoni MT Black" Height="28" VerticalAlignment="Bottom"/>
        <TextBlock x:ConnectionId='14' x:Name="tbHidden" HorizontalAlignment="Left" Margin="62,0,0,280" Text="Hidden Image:" TextWrapping="Wrap" Width="146" FontSize="20" Height="39" VerticalAlignment="Bottom" FontFamily="Segoe UI"/>

    </Grid>
</Page>

