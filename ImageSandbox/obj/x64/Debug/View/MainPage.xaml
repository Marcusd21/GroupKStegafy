        <Button x:ConnectionId='8' x:Name="loadHiddenImageButton" Content="Image" Margin="213,907,0,0" VerticalAlignment="Top"                          Height="41" Width="67"/>
        <Button x:ConnectionId='9' x:Name="saveButton" Content="Save" Margin="689,467,0,0" VerticalAlignment="Top"                         />
        <Button x:ConnectionId='10' x:Name="loadSourceImageButton" Content="Image" Margin="446,61,0,0" VerticalAlignment="Top"                          Height="41" Width="67"/>
