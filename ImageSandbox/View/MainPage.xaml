<Page
    x:Class="GroupKStegafy.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:GroupKStegafy.ViewModel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <viewModel:MainPageViewModel/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" MinWidth="1500"
          MinHeight="1000"
          Width="1500"
          Height="1000" VerticalAlignment="Center">

        <Button x:Name="imageStegafyButton" Content="Image Steganography" Margin="0,380,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Height="41" Width="236" Click="ImageStegafyButton_Click" />
        <Button x:Name="textStegafyButton" Content="Text Steganography" Margin="0,491,0,0" VerticalAlignment="Top" Height="41" Width="236" HorizontalAlignment="Center" Click="TextStegafyButton_Click"/>

        <TextBlock x:Name="tbBpcc" HorizontalAlignment="Left" Margin="641,106,0,0" Text="Main Menu" TextWrapping="Wrap" VerticalAlignment="Top" Height="55" Width="230" FontSize="45" FontFamily="Segoe UI"/>
    </Grid>
</Page>
